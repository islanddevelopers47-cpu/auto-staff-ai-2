{
  "name": "claw-staffer-desktop-windows",
  "version": "1.0.0",
  "description": "Claw Staffer â€” AI-Powered Bot Management Platform (Windows Desktop)",
  "author": "Claw Staffer",
  "type": "module",
  "main": "dist/main/electron.js",
  "scripts": {
    "build:backend": "tsc",
    "start": "electron .",
    "dev": "tsc && electron .",
    "postinstall": "electron-builder install-app-deps",
    "package": "tsc && electron-builder --win",
    "package:nsis": "tsc && electron-builder --win nsis",
    "package:portable": "tsc && electron-builder --win portable",
    "package:zip": "tsc && electron-builder --win zip"
  },
  "dependencies": {
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.1",
    "grammy": "^1.31.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.77.0",
    "tslog": "^4.10.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "com.clawstaffer.windows",
    "productName": "Claw Staffer",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png",
      "publisherName": "Claw Staffer"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.png",
      "uninstallerIcon": "resources/icon.png",
      "installerHeaderIcon": "resources/icon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Claw Staffer"
    },
    "portable": {
      "artifactName": "Claw-Staffer-Portable-${version}.exe"
    },
    "files": [
      "dist/main/**/*",
      "dist/backend/**/*",
      "public/**/*",
      "package.json",
      "!dist/win-*",
      "!dist/Claw-*",
      "!dist/*.zip",
      "!dist/*.exe",
      "!dist/*.yml"
    ],
    "extraResources": [
      {
        "from": "agents",
        "to": "agents"
      },
      {
        "from": "skills",
        "to": "skills"
      },
      {
        "from": "firebase-service-account.json",
        "to": "firebase-service-account.json"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "nodeGypRebuild": false
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
